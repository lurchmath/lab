  (--- "Theorem 7.2: n≠0 ⇒ ∃m,n=𝜎(m)")
  { :(¬ (= n 0)) (∃ m, (= n (𝜎 m))) } <thm

  (--- "Proof:")
  { :(¬ (= n 0))
    (--- "P(n) is n≠0 ⇒ ∃k,n=𝜎(m)")
    (--- "Base Case")
    { :(¬ (= 0 0))
      { :(¬ (∃ m, (= 0 (𝜎 m))))
        (= 0 0)
        →←
      }
      (∃ m, (= 0 (𝜎 m)))
    }
    (⇒ (¬ (= 0 0)) (∃ m, (= 0 (𝜎 m))) )
    (--- "Inductive step")
    { :[k]
      { :(⇒ (¬ (= k 0)) (∃ m, (= k (𝜎 m))) )
        { :(¬ (= (𝜎 k) 0)) 
          (= (𝜎 k) (𝜎 k))
          (∃ m, (= (𝜎 k) (𝜎 m)))
        }
        (⇒ (¬ (= (𝜎 k) 0)) (∃ m, (= (𝜎 k) (𝜎 m))))
      } 
    }
    (∀ j , (⇒ (¬ (= j 0)) (∃ m, (= j (𝜎 m)))))
    (⇒ (¬ (= n 0)) (∃ m, (= n (𝜎 m))))
    (∃ m, (= n (𝜎 m)))
  }
  
